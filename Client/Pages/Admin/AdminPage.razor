@page "/admin"

@inject CustomAuthenticationStateProvider _provider;
@inject NavigationManager _navigation;
@inject Account _account;

<div class="container">

    <h3>Admin Page</h3>

    <ul class="nav nav-tabs" id="adminTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="create-category-tab" data-bs-toggle="tab" data-bs-target="#create-category" type="button" role="tab" aria-controls="create-category" aria-selected="true">Create Category</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="create-product-tab" data-bs-toggle="tab" data-bs-target="#create-product" type="button" role="tab" aria-controls="profile" aria-selected="false">Create Product</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Contact</button>
        </li>
    </ul>
    <div class="tab-content border border-1 p-3" id="adminTabContent">
        <div class="tab-pane fade show active" id="create-category" role="tabpanel" aria-labelledby="create-category"><CreateCategoryComponent /></div>
        <div class="tab-pane fade" id="create-product" role="tabpanel" aria-labelledby="create-product"><CreateProductComponent /></div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">3</div>
    </div>
</div>

