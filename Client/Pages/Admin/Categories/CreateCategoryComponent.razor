@inject ICategoryService _categoryService;


<div class="row">
    <div class="col">
        <h3>Create Category</h3>
    </div>
</div>
<div class="row mt-2">
    <div class="col">
        <div class="label">Choose Icon</div>
        <IconPicker OnIconChanged="IconChanged" />
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <div class="label">Type Name</div>
        <div><input class="form-control" type="text" @bind="@Title" /></div>

    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <div class="label">Result:</div>
        <div class="result">
            <i class="@Icon"></i>
            <span>@Title</span>
        </div>
    </div>
</div>
<div class="row mt-2">
    <div class="col">
        <button class="btn btn-primary" disabled="@IsDisabled" @onclick="CreateCategory">Create</button>
    </div>
</div>





